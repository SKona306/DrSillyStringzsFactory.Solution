@{
  Layout = "_Layout";
}

@model Factory.Models.Engineer

<h4>Add a new Engineer</h4>
<br>

@using(Html.BeginForm())
{
  @Html.LabelFor(model => model.Name)
  @Html.TextBoxFor(model => model.Name)

  @Html.LabelFor(model => model.YearStarted)
  @Html.TextBoxFor(model => model.YearStarted)

  <input type="submit" value="Add Engineer"/>
}
<br>

<button class="btn btn-info">@Html.ActionLink("Back to Engineers", "Index")</button>
<button class="btn btn-info">@Html.ActionLink("Home", "Index", "Home")</button>
<button class="btn btn-info">@Html.ActionLink("Machines", "Index", "Machines")</button>
