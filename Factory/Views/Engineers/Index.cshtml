@{
  Layout = "_Layout";
}

@using Factory.Models
@model List<Factory.Models.Engineer>;

<h1>Engineers:</h1>

@if(@Model.Count == 0)
{
  <p>There are no engineers in the system.</p>
  <button class="btn btn-info">@Html.ActionLink("Add a new engineer", "Create")</button>
}

@foreach (Engineer engineer in Model)
{
  <li>@Html.ActionLink($"{engineer.Name}", "Details", new {id = engineer.EngineerId})</li>
}
<button class="btn btn-info">@Html.ActionLink("Add a new engineer", "Create")</button>
<button class="btn btn-info">@Html.ActionLink("Home", "Index", "Home")</button>
<button class="btn btn-info">@Html.ActionLink("Machines", "Index", "Machines")</button>
