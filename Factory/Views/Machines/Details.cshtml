@{
  Layout = "_Layout";
}

@model Factory.Models.Machine

<h2>Machine Details:</h2>
<br>

<h4>@Html.DisplayNameFor(model => model.Name): @Html.DisplayFor(model => model.Name)</h4>
<h4>@Html.DisplayNameFor(model => model.Description): @Html.DisplayFor(model => model.Description)</h4>
<br>

<h4>Licensed Engineers:</h4>
<ul>
  @if(@Model.JoinEntities.Count == 0)
  {
    <li>There are no engineers who are licensed on this Machine</li>
  }
  else
  {
    @foreach(var join in Model.JoinEntities)
    {
      <li>@Html.ActionLink($"{join.Engineer.Name}", "Details", "Engineers", new { id = join.Engineer.EngineerId})</li>
      @using(Html.BeginForm())
      {
        @Html.Hidden("joinId", @join.EngineerMachineId)
        <input type="submit" value="remove machine"/>
      }
    }
  }
</ul>
<button>@Html.ActionLink("Add Engineer to this machine", "AddEngineer")</button>

<br>
<br>

<button>@Html.ActionLink("Edit Machine", "Edit")</button>
<button>@Html.ActionLink("Home", "Index", "Home")</button>
<button>@Html.ActionLink("Machines", "Index")</button>
<button>@Html.ActionLink("Engineers", "Index")</button>
<button>@Html.ActionLink("Delete Machine", "Delete")</button>

